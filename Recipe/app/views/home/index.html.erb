<div class="container mt-5">
	<div class="row">
		<div class="col">
			<div class="card-deck">
				<% @recipes.each do |recipe| %>
					<div class="card shadow">
						<%= image_tag("not-available.jpg", :class=>"card-img-top") %>
						<div class="card-body">
							<h5 class="card-title"><a href="/recipe/<%= recipe.id %>"><%= recipe.name %></a></h5>
						</div>
						<div class="card-footer">
							<small class="text-muted"><%= recipe.user.username %> receptje</small>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>