<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
      <form class="" action="/recipe/<%= @recipe.id %>/modify" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="title">Cím</label>
              <input class="form-control" type="text" name="title" value="<%= @recipe.name %>">
            </div>
            <div class="form-group">
              <label for="type">Típus</label>
              <select class="form-control" name="type" selected="<%= @recipe.foodtype %>">
                <option value="0">Előétel</option>
                <option value="1">Főétel</option>
                <option value="2">Köretek</option>
                <option value="3">Sütemények</option>
              </select>
            </div>
            <div class="form-group">
              <label for="description">Leírás</label>
              <textarea class="form-control" name="description" rows="8" cols="80"><%= @recipe.description %></textarea>
            </div>
            <input class="form-control btn btn-success" type="submit" value="Mentés" />
          </div>
          <div class="col">
            
            <label for="">Hozzávalók</label>
            
            <% i = 1 %>
            <% @recipe.ingredients.each do |ingredient| %>
                <div class="form-group">
                    <input class="form-control" type="text" name="ingredient-<%= i %>" value="<%= ingredient.name %>">
                </div>
            <% i += 1 end %>
            </div>
        </div>
      </form>
    </div>
  </div>
</div>
