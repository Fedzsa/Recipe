<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h2><%= @recipe.name %></h2>
        </div>
        <div class="col">
            <h5>Hozzávalók</h5>
            <ul>
                <% @recipe.ingredients.each do |ingredient| %>
                    <li><%= ingredient.name %></li>
                <% end %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p><%= @recipe.description %></p>
        </div>
    </div>
</div>