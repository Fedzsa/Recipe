<div class="container mt-5">
	<div class="row">
		<div class="col"></div>
    <div class="col shadow p-5">
      <h2><%= t('signup.title') %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
		<div class="field">
			<%= devise_error_messages! %>	
		</div>
		
        <div class="field">
          <%= f.label t('signup.username') %><br />
          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t('login.password') %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('signup.character_minimum') %>)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t('signup.password_again') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit t('signup.title'), class: "btn btn-success form-control mt-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col"></div>
	</div>
</div>