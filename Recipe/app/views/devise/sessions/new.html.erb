<div class="container mt-5">
	<div class="row">
		<div class="col"></div>
    <div class="col shadow p-5">
      <h2><%= t('login.title') %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t('login.password') %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label t('login.rememberme') %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit t('login.title'), class: "btn btn-success form-control" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col"></div>
	</div>
</div>